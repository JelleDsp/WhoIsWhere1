{
  "name": "WhoIsWhere",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "hdb": "^0.18.3",
    "node-pre-gyp": "^0.17.0",
    "sqlite3": "^5.0.2"
  },
  "engines": {
    "node": "14.18.0"
  },
  "scripts": {
    "start": "cds run",
    "build": "run-s build:cds build:mta",
    "build:cds": "cds build/all --clean",
    "build:mta": "mbt build --mtar=whoiswhere.mtar",
    "deploy": "run-s build cftarget deploy:cf",
    "deploy:cf": "cf deploy mta_archives/whoiswhere.mtar -f",
    "deploy:srv": "npm run cftarget && cds build --production && cf push",
    "cftarget": "cf target -o Appgyver -s dev"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "features": {
      "fiori_preview": true,
      "in_memory_db": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "whoIsWhere.db"
        }
      }
    }
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}